@model IEnumerable<RateMyCar.Models.Review>
@{
    ViewData["Title"] = "Search Results";
}

<h2>Search Results</h2>
<br />

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Car</th>
                <th>User</th>
                <th>Rating</th>
                <th>Comments</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var review in Model)
            {
                <tr>
                    <td>@review.Car.Make @review.Car.Model</td>
                    <td>@review.User.Fullname</td>
                    <td>@review.Rating</td>
                    <td>@review.Comments</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">No reviews found for the selected car.</div>
}