@model IEnumerable<RateMyCar.Models.Review>
@{
    ViewData["Title"] = "Search Cars";
}

<h2>Search for Cars</h2>
<br />

<form method="post" asp-action="Search">
    <div class="form-group">
        <label for="carId">Select a Car:</label>
        <select id="carId" name="carId" class="form-control">
            <option value="">-- Select a Car --</option>
            @foreach (var car in ViewBag.Cars)
            {
                <option value="@car.Value">@car.Text</option>
            }
        </select>
    </div>
    <br />

    <button type="submit" class="btn btn-primary">Search</button>
</form>

@if (ViewData["Message"] != null)
{
    <div class="alert alert-warning">@ViewData["Message"]</div>
}